<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!--solid
                android:color="#D5D5D5" /-->
            <gradient
                android:startColor="#FF2525"
                android:endColor="#FF0000"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF0000"
                android:endColor="#FF2525"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FF0000" />
            <corners
                android:radius="600dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>