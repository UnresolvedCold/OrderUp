<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!--solid
                android:color="#D5D5D5" /-->
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimary"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary" />
            <corners
                android:radius="2dp" />
            android:left="10dp"
            android:top="5dp"
            android:right="10dp"
            android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorPrimary"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>