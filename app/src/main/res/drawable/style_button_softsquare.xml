<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!--solid
                android:color="#D5D5D5" /-->
            <gradient
                android:startColor="#03A9F4"
                android:endColor="#03A9F4"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#03A9F4" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#008CFC"
                android:endColor="#008CFC"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#008CFC" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>