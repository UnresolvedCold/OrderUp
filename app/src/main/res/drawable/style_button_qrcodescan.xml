                android:width="2dp"
                android:color="#D5D5D5" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>